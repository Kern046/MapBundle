{% extends "::base.html.twig" %}

{% block title %}Map Generation{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" media="all" href="{{ asset('bootstrap-3.0.3/dist/css/bootstrap.min.css') }}">
    <link rel="stylesheet" media="all" href="{{ asset('css/kit.css') }}">
    <link rel="stylesheet" media="all" href="{{ asset('css/map-generator.css') }}">
{% endblock %}
    
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('scripts/jquery.js') }}"></script>
    <script type="text/javascript" src="{{ asset('scripts/jquery.transit.js') }}"></script>
    <script type="text/javascript" src="{{ asset('scripts/maphilight.js') }}"></script>
    <script type="text/javascript" src="{{ asset('scripts/map-generator.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bootstrap-3.0.3/dist/js/bootstrap.min.js') }}"></script>
{% endblock %}

{% block body %}
    <div id="wrap">
        <div class="row-fluid">
            <div class="col-md-4">
                <div id="map-toolkit" class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            Gestion de la carte
                        </h3>
                    </div>
                    <div class="panel-body">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <a id='area-manager' onclick='enableAreaDefinition();return false;'>
                                    <span>Ajouter une zone</span>
                                </a>
                            </li>
                            <li class="list-group-item">
                                <a>
                                    Supprimer la carte
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            Informations sur l'interface
                        </h3>
                    </div>
                    <div class="panel-body">
                        <ul class='list-unstyled'>
                            <li>
                                Ã‰tat du verrouillage :
                                <span id='lock-state-indicator' class='red-indicator'>Inactif</span> 
                            </li>
                            <li>
                                Position X :
                                <span id='mouse-x-position' class='red-indicator mouse-position'>Hors-champ</span>
                            </li>
                            <li>
                                Position Y :
                                <span id='mouse-y-position' class='red-indicator mouse-position'>Hors-champ</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
                
        <div id="map-viewer">
            <img id="map-image" src="{{ asset(map.baseImage.getWebPath())}}">
        </div>
    </div>
{% endblock %}